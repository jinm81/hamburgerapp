<h1>burgers!</h1>

<h2>Hamburgers!</h2>

<ul>
  {{#each burger}}
    {{#unless devour}}
      {{> burger/burgers-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devour!</h2>

<ul>
  {{#each burger}}
    {{#if devour}}
      {{ burger/burgers-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">devour</label><br>
    <input type="radio" name="devour" value="1" checked> devour!<br>
    <input type="radio" name="devour" value="0"> Awake
  </div>

  <button type="submit">Add burgers</button>
</form>
